{
  "name": "webpack-config-ca",
  "version": "0.0.0-development",
  "author": "CA Technologies",
  "description": "Configuration for Webpack projects at CA",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CAAPIM/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "config",
    "webpack-config",
    "ca"
  ],
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "7.2.5",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "browser-sync": "2.23.6",
    "browser-sync-webpack-plugin": "1.2.0",
    "css-loader": "0.28.9",
    "dotenv-webpack": "1.5.5",
    "eslint-loader": "1.9.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "flow-bin": "0.48.0",
    "flow-status-webpack-plugin": "0.1.7",
    "html-loader": "0.5.5",
    "image-webpack-loader": "4.0.0",
    "imagemin": "^5.3.1",
    "json-loader": "^0.5.7",
    "node-sass": "4.7.2",
    "postcss-loader": "2.0.10",
    "react-svg-loader": "2.1.0",
    "sass-loader": "6.0.6",
    "source-map-loader": "0.2.3",
    "stats-webpack-plugin": "0.6.2",
    "style-loader": "0.20.1",
    "url-loader": "0.6.2",
    "webpack-config": "7.5.0"
  },
  "peerDependencies": {
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-ca": "^1.1.0",
    "codecov": "3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "decamelize": "2.0.0",
    "eslint": "^3.18.0",
    "eslint-config-ca": "^2.0.1",
    "flow-bin": "^0.48.0",
    "flow-coverage-report": "^0.4.1",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "22.1.4",
    "react": "16.2.0",
    "react-dom": "16.3.0",
    "rimraf": "2.6.2",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.14.0",
    "webpack": "3.10.0",
    "webpack-config": "7.5.0",
    "webpack-dev-server": "2.11.1"
  },
  "scripts": {
    "codecov": "codecov",
    "commit": "git-cz",
    "lint": "eslint .",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i './src/**/*.js' -t html -t text",
    "prebuild": "rimraf ./lib",
    "build": "babel src --out-dir lib",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "pretest:acceptance": "npm run build",
    "test:acceptance": "cd tests/acceptance; webpack --bail; NODE_ENV=production webpack --bail",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && npm run flow && npm run test && npm run test:acceptance",
    "start": "npm run build && cd example && npm start"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|css|less|sass|scss)$": "<rootDir>/tests/__mocks__/files.js"
    },
    "unmockedModulePathPatterns": [
      "node_modules/react/"
    ]
  }
}
